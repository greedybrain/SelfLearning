<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
        <%- include('./partials/nav.ejs') %>
        <div class="blogs content">
                <h2>All Blogs</h2>
                <% if (blogs.length > 0) { %>
                        
                        <% blogs.forEach(blog => { %>
                                
                                <h2><%= blog.title %> </h2>
                                <p><%= blog.snippet %> </p>
                                <p><%= blog.body %> </p>
                                
                        <% }) %>

                <% }  else { %>

                        <p>No blogs to display</p>
                        
                <% } %>
        </div>
        <%- include('./partials/footer.ejs') %>
</body>

</html>